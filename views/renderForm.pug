doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title GENQ KYC FORM
  // Bootstrap CSS
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='/css/form.css')

 .container-fluid
        a.btn.btn-success(href= "/babiesRegister") Register Form
        p
        h1.text-center.my-6.text-bg-success.text-light List Of Registry
        table.table.table-striped
          thead
            tr
              th First Name
              th Last Name
              th Date Of Birth
              th Gender
              th Country
              th Town
              th State/ District
              th Zip Code
              th Phone Number 1
              th Phone Number 2
              th Email
          tbody
            if fields.length 
              each field in fields
                tr
                  td #{field.firstName}
                  td #{field.lastName}
                  td #{moment(field.dob).format("DD-MM-YY")}
                  td #{field.country}
                  td #{field.town}
                  td #{field.state}
                  td #{field.zip}
                  td #{field.phone1}
                  td #{field.phone2}
                  td #{field.email} 
     
// Bootstrap JS (optional)
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js')
script(src='/js/form.js')

